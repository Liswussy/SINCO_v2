<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector_text_input_outline</item>

        <!--Box Border Radius-->
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>

        <!--Hint-->
        <item name="hintTextColor">@color/selector_text_input_outline</item>

        <item name="android:textColor">@color/white_primary</item>

    </style>

    <style name="SearchInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxStrokeColor">@color/comment_text_input_outline</item>
        <item name="hintTextColor">@color/yellow_primary</item>
        <item name="android:textColor">@color/black_primary</item>
    </style>

<style name="QuantityTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <item name="boxCornerRadiusBottomEnd">4dp</item>
    <item name="boxCornerRadiusBottomStart">4dp</item>
    <item name="boxCornerRadiusTopEnd">4dp</item>
    <item name="boxCornerRadiusTopStart">4dp</item>

</style>

    <style name="CommentTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>

<!--        <item name="boxStrokeColor">@color/white_primary</item>-->
<!--        <item name="hintTextColor">@color/yellow_primary</item>-->
<!--        <item name="android:textColor">@color/black_primary</item>-->


        <item name="hintTextColor">@color/comment_text_input_outline</item>
    </style>

    <style name="CustomSpinner" parent="">
        <item name="android:colorForeground">@color/white_primary</item>

        <item name="background">@drawable/spinner_border</item>

    </style>

    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/black_primary</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/white_primary</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="CustomSpinnerThinBorder" parent="">
        <item name="android:colorForeground">@color/white_primary</item>

        <item name="background">@drawable/spinner_thin_border</item>

    </style>

    <style name="CustomMaterialButtonBorderRadius" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/black_primary</item>
        <item name="cornerRadius">5dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/yellow_primary</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:state_pressed"></item>
    </style>

</resources>