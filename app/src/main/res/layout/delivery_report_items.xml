<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_thin_border"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"

            android:src="@drawable/truck_icon_white"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            >



            <TextView
                android:id="@+id/itemsDelivered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Items Delivered"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white_primary"

                />

            <TextView
                android:id="@+id/tv_supplier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supplier"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white_primary"

                />

            <TextView
                android:id="@+id/tv_deliveryID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deliver ID:"
                android:textSize="12sp"
                android:textColor="@color/white_primary"

                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Additional Information..."
                    android:textSize="10sp"
                    android:textColor="@color/white_primary" />

            </LinearLayout>



        </LinearLayout>


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:layout_marginTop="40dp"
            android:textSize="11sp"
            android:textColor="@color/white_primary"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                />



        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>