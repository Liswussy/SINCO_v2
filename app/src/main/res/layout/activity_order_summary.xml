<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderSummaryActivity">


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"

        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/dnp_logo"
            android:layout_marginEnd="10dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash Register"
            android:textColor="@color/yellow_primary"
            android:textSize="24sp"
            android:textStyle="bold"

            />

    </LinearLayout>




    <ImageButton
        android:id="@+id/ib_back_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_arrow_back_24_yellow"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout1"
        app:layout_constraintEnd_toStartOf="@+id/header_title1"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/header_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Summary"
        android:textStyle="bold"
        android:layout_marginStart="70dp"
        android:textColor="@color/white_primary"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout1"
        />



        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="List of Orders"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:background="@color/yellow_primary"
            android:textColor="@color/black_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_title1"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="5dp"
            />

  <ScrollView
      android:id="@+id/scrollview1"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textview1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"

      >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"

          android:orientation="vertical"
          android:background="@color/white_primary"
          >



          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"

              >
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp"
                  >

                  <TextView
                      android:id="@+id/tv_product_name"
                      android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:text="Product Name"
                      android:gravity="center"
                      android:textSize="18sp"
                      android:textColor="@color/black_primary"
                      />

                  <TextView
                      android:id="@+id/tv_product_price"
                      android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:text="Product Price"
                      android:gravity="center"
                      android:textSize="18sp"
                      android:textColor="@color/black_primary"

                      />


              </LinearLayout>

              <!--Quantity and Buttons-->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <TextView
                      android:id="@+id/tv_product_qty"
                      android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:text="Quantity"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:textSize="18sp"
                      android:textColor="@color/black_primary"
                      />

                  <!--Layout Buttons-->

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      android:gravity="center"
                      >

                      <ImageButton
                          android:layout_width="30dp"
                          android:layout_height="30dp"
                          android:scaleType="fitXY"
                          android:src="@drawable/add_icon"
                          android:background="@android:color/transparent"

                          />
                      <ImageButton
                          android:layout_width="30dp"
                          android:layout_height="30dp"
                          android:scaleType="fitXY"
                          android:layout_marginStart="10dp"
                          android:src="@drawable/add_icon"
                          android:background="@android:color/transparent"

                          />
                      <ImageButton
                          android:layout_width="30dp"
                          android:layout_height="30dp"
                          android:scaleType="fitXY"
                          android:layout_marginStart="10dp"
                          android:src="@drawable/add_icon"
                          android:background="@android:color/transparent"

                          />

                  </LinearLayout>

                  <!--Layout Buttons-->

              </LinearLayout>
              <!--Quantity and Buttons-->

              <View
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:layout_marginTop="10dp"
                  android:background="@color/black_primary"/>

              <!--Transaction-->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:orientation="horizontal"
                  >

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="10dp"
                      android:text="Sub-Total"
                      android:textSize="18sp"
                      android:textColor="@color/black_primary"

                      />


                  <TextView
                      android:id="@+id/tv_subtotal"
                      android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:text="P0.00"
                      android:gravity="end"
                      android:layout_marginEnd="10dp"
                      android:textSize="18sp"
                      android:textColor="@color/black_primary"

                      />



              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:text="Discount"
                      android:layout_marginStart="10dp"
                      android:textSize="18sp"
                      android:textColor="@color/black_primary"

                      />

                  <Spinner
                      android:id="@+id/sp_discount"
                      android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      />




              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:text="Total with Discount"
                      android:layout_marginStart="10dp"
                      android:textSize="18sp"
                      android:textColor="@color/black_primary"

                      />

                  <TextView
                      android:id="@+id/tv_total_discount"
                      android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:text="P0.00"
                      android:gravity="end"
                      android:layout_marginEnd="10dp"
                      android:textSize="18sp"
                      android:textColor="@color/black_primary"

                      />




              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="10dp"
                      android:text="Grand Total"
                      android:textSize="18sp"
                      android:textColor="@color/black_primary"

                      />

                  <TextView
                      android:id="@+id/tv_grand_total"
                      android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:text="P0.00"
                      android:gravity="end"
                      android:layout_marginEnd="10dp"
                      android:textSize="18sp"
                      android:textColor="@color/black_primary"

                      />


              </LinearLayout>
                  
              <com.google.android.material.button.MaterialButton
                  android:layout_width="410dp"
                  android:layout_height="wrap_content"
                  style="@style/CustomTextInputLayout"
                  android:layout_gravity="center"
                  android:text="Confirm"
                  android:textStyle="bold"
                  android:textSize="18sp"
                  android:textColor="@color/white_primary"
                  android:backgroundTint="@color/black_primary"

                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Add more Items"
                  android:textColor="@color/black_primary"
                  android:textSize="18sp"
                  android:layout_marginStart="10dp"
                  android:paddingBottom="10dp"
                  />

          </LinearLayout>



      </LinearLayout>


  </ScrollView>








</androidx.constraintlayout.widget.ConstraintLayout>