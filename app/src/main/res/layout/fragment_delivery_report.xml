<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DeliveryReportFragment">

    <TextView
        android:id="@+id/header_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" History"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white_primary"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest"
        android:textSize="20sp"
        android:textColor="@color/yellow_primary"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/header_title1"
        app:layout_constraintStart_toStartOf="parent"

        />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/calendar_icon"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/header_title1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        />

   <LinearLayout
       android:id="@+id/linearlayout1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingStart="20dp"
       android:layout_marginEnd="20dp"
       app:layout_constraintTop_toBottomOf="@+id/textview1"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:orientation="vertical"
       >
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="10dp"
               android:background="@color/white_primary"
               >

               <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_marginStart="20dp"
                   android:layout_marginTop="20dp"
                   android:src="@drawable/truck_icon"

                   />
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginStart="20dp"
                   >


                   <TextView
                       android:id="@+id/tv_supplier"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Supplier"
                       android:textSize="16sp"
                       android:textColor="@color/black_primary"

                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Product List:"
                       android:textSize="16sp"
                       android:textColor="@color/black_primary"

                       />

                   <TextView
                       android:id="@+id/tv_product_name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Product Name "
                       android:textSize="16sp"
                       android:textColor="@color/black_primary"

                       />
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Comment"
                           android:textSize="16sp"
                           android:textColor="@color/black_primary"

                           />


                       <TextView
                           android:id="@+id/tv_comment"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text=""
                           android:textSize="16sp"
                           android:textColor="@color/black_primary"

                           />


                   </LinearLayout>



               </LinearLayout>


               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=""
                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=""
                       />

                   <!--Product Quantity-->
                   <TextView
                       android:id="@+id/tv_product_qty"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=" 0 "
                       android:textSize="16sp"
                       android:textColor="@color/black_primary"
                       />


               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=""
                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=" Defects:"
                       android:textSize="16sp"
                       android:textColor="@color/black_primary"
                       />

                   <TextView
                       android:id="@+id/tv_defects"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=" Damage "
                       android:textSize="16sp"
                       android:textColor="@color/black_primary"

                       />


               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=""
                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=""
                       />

                   <TextView
                       android:id="@+id/tv_defect_qty"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0"
                       android:textSize="16sp"
                       android:textColor="@color/black_primary"

                       />


               </LinearLayout>

              <TextView
                  android:id="@+id/tv_date"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Date"
                  android:layout_marginTop="30dp"
                  android:gravity="end"
                  android:layout_marginEnd="30dp"
                  android:textSize="16sp"
                  android:textColor="@color/black_primary"
                  />



           </LinearLayout>




       </ScrollView>


   </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>