<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Top Stroke -->
    <item
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/white_primary" /> <!-- Set your desired color here -->
        </shape>
    </item>

    <!-- Bottom Stroke -->
    <item
        android:left="-1dp"
        android:right="-1dp"
        android:bottom="-1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/white_primary" /> <!-- Set your desired color here -->
        </shape>
    </item>

    <!-- Your Main Shape -->
    <item>
        <shape android:shape="rectangle">
            <!-- Your shape attributes go here -->
        </shape>
    </item>

</layer-list>